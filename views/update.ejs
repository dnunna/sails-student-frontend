<%- partial ('partials/statusmessage.ejs') %>


<!--this sectionis for the dropdown values of homebuilder contact-->
<form action="#" method="">
  <div class="form-group">
    <label for="builderId">SELECT A BUILDER CONTACT TO UPDATE</label><br/>
    <select id="builderId" name="builderId" title="choose a name.." data-header="Select a name" data-live-search="true">
    <% if(typeof builders != "undefined" && builders.length > 0){ %>
      <% builders.forEach(function(builder){ %>
        <option value="<%= builder.builder_id %>">
          <%= builder.contact_last_name + ", " +  builder.contact_first_name %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<!-- this section is for to redisplay the data that is pulled from api and update the values-->
<h2>Update Builder</h2>
<form action="/update" method="POST" class="form-horizontal" id="updateBuilderForm">
  <input type="hidden" name="builder_id" id="builder_id">
  <div class="form-group">
    <label for="company_name" class="col-sm-2 control-label">Company Name</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="company_name" name="company_name" placeholder="Company Name">
    </div>
  </div>
  <div class="form-group">
    <label for="first_name" class="col-sm-2 control-label">First Name</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="contact_first_name" name="contact_first_name" placeholder="First Name">
    </div>
  </div>
  <div class="form-group">
    <label for="last_name" class="col-sm-2 control-label">Last Name</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="contact_last_name" name="contact_last_name"  placeholder="Last Name" required>
    </div>
  </div>
  <div class="form-group">
    <label for="contact_phone_number" class="col-sm-2 control-label">Phone Number</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="contact_phone_number" name="contact_phone_number" placeholder="603-002-0001" >
    </div>
  </div>
  <div class="form-group">
    <label for="email_address" class="col-sm-2 control-label">EMAIL</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="email_address" name="email_address" placeholder="abc@yahoo.com">
    </div>
  </div>
  <div class="form-group">
    <label for="zip_code" class="col-sm-2 control-label">ZIP code</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="zip_code" name="zip_code" placeholder="03801">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-update">Update Builder</button>
    </div>
  </div>
</form>
